<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationX="-1dp"
    tools:context=".ui.main.ui.main.characterEdit">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/character_level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/intInput"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="508dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/intInput"
        android:inputType="number"
        app:layout_anchor="@+id/view_pager"
        app:layout_anchorGravity="center|top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintVertical_bias="0.369" />

    <EditText
        android:id="@+id/wisInput"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="508dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/wisInput"
        android:inputType="number"
        app:layout_anchor="@+id/view_pager"
        app:layout_anchorGravity="center|top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintVertical_bias="0.369" />

    <EditText
        android:id="@+id/strInput"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="508dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/strInput"
        android:inputType="number"
        app:layout_anchor="@+id/view_pager"
        app:layout_anchorGravity="center|top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintVertical_bias="0.369" />

    <EditText
        android:id="@+id/conInput"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="508dp"
        android:autofillHints="@string/nameInput"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/conInput"
        android:inputType="number"
        app:layout_anchor="@+id/view_pager"
        app:layout_anchorGravity="center|top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.264"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintVertical_bias="0.369" />

    <EditText
        android:id="@+id/dexInput"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="508dp"
        android:autofillHints="@string/nameInput"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/dexInput"
        android:inputType="number"
        app:layout_anchor="@+id/view_pager"
        app:layout_anchorGravity="center|top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintVertical_bias="0.369" />

    <EditText
        android:id="@+id/chaInput"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="508dp"
        android:autofillHints="@string/nameInput"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/chaInput"
        android:inputType="number"
        app:layout_anchor="@+id/view_pager"
        app:layout_anchorGravity="center|top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintVertical_bias="0.369" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#CCCCCC"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.147">

        <requestFocus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </EditText>

    <TextView
        android:id="@+id/chaBonus"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:translationX="-1dp"
        android:translationY="-11dp"
        app:layout_constraintStart_toEndOf="@+id/dexBonus"
        app:layout_constraintTop_toBottomOf="@+id/chaInput" />

    <TextView
        android:id="@+id/dexBonus"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:translationX="1dp"
        android:translationY="-11dp"
        app:layout_constraintStart_toEndOf="@+id/intBonus"
        app:layout_constraintTop_toBottomOf="@+id/dexInput" />

    <TextView
        android:id="@+id/strBonus"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:translationX="1dp"
        android:translationY="-11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/strInput" />

    <TextView
        android:id="@+id/conBonus"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:translationX="1dp"
        android:translationY="-11dp"
        app:layout_constraintStart_toEndOf="@+id/strBonus"
        app:layout_constraintTop_toBottomOf="@+id/conInput" />

    <TextView
        android:id="@+id/intBonus"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:translationX="1dp"
        android:translationY="-11dp"
        app:layout_constraintStart_toEndOf="@+id/conBonus"
        app:layout_constraintTop_toBottomOf="@+id/intInput" />

    <TextView
        android:id="@+id/wisBonus"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:translationX="1dp"
        android:translationY="-11dp"
        app:layout_constraintStart_toEndOf="@+id/chaBonus"
        app:layout_constraintTop_toBottomOf="@+id/wisInput" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="323dp"
        android:layout_marginLeft="323dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="402dp"
        android:onClick="saveButtonClicked"
        android:text="@string/saveResults"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wisBonus"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>